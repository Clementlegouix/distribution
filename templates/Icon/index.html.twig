{# templates/Icon/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Liste des images{% endblock %}

{% block body %}
    <h2>Liste des images</h2>
    {% for label, messages in app.flashes %}
	    {% for message in messages %}
	        <div id="success-alert" class="alert alert-{{ label }}" role="alert">
	            {{ message }}
	        </div>
	    {% endfor %}
	{% endfor %}
    <div class="table-responsive">
        <table id="example" class="table table-striped table-hover">
	        <thead>
	            <tr>
	                <th scope="col">Nom</th>
	                <th scope="col">Image</th>
	                <th scope="col">Actions</th>
	            </tr>
	        </thead>
	        <tbody>
	            {% for icon in icons %}
	            	<tr>
			        	<td>{{ icon.nom }}</td>
			        	<td><image src="{{ asset('uploads/icon/' ~ icon.image) }}" /></td>
			        	<td>
			        		<a href="{{ path('supprimerIcon', {'icon': icon.id }) }}"><i data-feather="trash"></i></a>&nbsp;&nbsp;
			        	</td>
			        </tr>
			    {% endfor %}
	        </tbody>
	    </table>
      </div>

{% endblock %}

{% block javascripts %}
	<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
	<script type="text/javascript">
			$(document).ready(function() 
			{
				$('#example').DataTable( {
			        "info":     false,
			        "language": {
					    
							"sProcessing":     "Traitement en cours...",
							"sSearch":         "Rechercher&nbsp;:",
						    "sLengthMenu":     "Afficher _MENU_ &eacute;l&eacute;ments",
							"sInfo":           "Affichage de l'&eacute;l&eacute;ment _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
							"sInfoEmpty":      "Affichage de l'&eacute;l&eacute;ment 0 &agrave; 0 sur 0 &eacute;l&eacute;ment",
							"sInfoFiltered":   "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
							"sInfoPostFix":    "",
							"sLoadingRecords": "Chargement en cours...",
						    "sZeroRecords":    "Aucun &eacute;l&eacute;ment &agrave; afficher",
							"sEmptyTable":     "Aucune donn&eacute;e disponible dans le tableau",
							"oPaginate": {
								"sFirst":      "Premier",
								"sPrevious":   "Pr&eacute;c&eacute;dent",
								"sNext":       "Suivant",
								"sLast":       "Dernier"
							},
							"oAria": {
								"sSortAscending":  ": activer pour trier la colonne par ordre croissant",
								"sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"
							}
						
					}
			    } );
			} );	
	        </script>
{% endblock %}
